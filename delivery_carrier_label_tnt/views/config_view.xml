<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_tnt_config_settings" model="ir.ui.view">
            <field name="model">tnt.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Columns / So Columns" version="7.0"
                      class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                        <a href="https://www.tnt.com/express/en_gb/site/home.html" target="_blank">
                            <img src="delivery_carrier_label_tnt/static/src/img/icon.png" height="30px" margin="5px"/>
                        </a>
                    </header>

                    <group>
                        <div>
                            <div>
                                <label for="company_id" string="Select Company"/>
                                <field name="company_id" widget="selection"
                                       class="oe_inline"/>
                            </div>
                        </div>
                    </group>
                    <!--      <separator string="Account"/>
                          <group name="account" col="4">
                            <field name="fr_contact_id" class="oe_inline"/>
                            <newline/>
                            <field name="inter_contact_id" class="oe_inline"/>
                            <newline/>
                            <field name="customer_code" class="oe_inline"/>
                            <newline/>
                            <field name="warehouse" class="oe_inline"/>
                            <newline/>
                            <field name="generate_label"/>
                            <newline/>
                            <field name="traceability"/>
                            <newline/>
                            <field name="test"/>
                          </group>-->
                    <separator string="Account"/>
                    <group name="live_account" col="4">
                        <field name="account_number" class="oe_inline"/>
                        <newline/>
                        <field name="user_id" class="oe_inline"/>
                        <newline/>
                        <field name="user_password" class="oe_inline" password="True"/>
                        <newline/>
                        <!--<field name="customer_code" class="oe_inline"/>-->
                        <!--<newline/>-->
                        <!--<field name="warehouse" class="oe_inline"/>-->
                        <!--<newline/>-->
                    </group>
                    <separator string="Test Account"/>
                    <group>
                        <field name="test_id" class="oe_inline"/>
                        <newline/>
                        <field name="test_password" class="oe_inline" password="True"/>
                    </group>
                    <separator string="Consignment Numbers"/>
                    <group>
                        <field name="generate_connumber"/>
                        <newline/>
                        <field name="connumber" class="oe_inline"/>
                    </group>
                    <separator string="Other"/>
                    <group>
                        <field name="test"/>
                    </group>

                </form>
            </field>
        </record>

        <record id="action_tnt_config" model="ir.actions.act_window">
            <field name="name">TNT config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tnt.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_tnt_config" name="TNT"
                  parent="base_delivery_carrier_label.menu_carriers_config"
                  action="action_tnt_config"/>

        <!--After installation of the module, open the adhoc menu -->
        <record id="action_tnt_first" model="ir.actions.client">
            <field name="name">Open Carrier Menu</field>
            <field name="tag">reload</field>
            <field name="params" eval="{'menu_id': ref('menu_tnt_config')}"/>
        </record>

        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_tnt_first"/>
            <field name="state">open</field>
        </record>

    </data>
</openerp>
